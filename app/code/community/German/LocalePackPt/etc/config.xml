<config>
    <modules>
        <German_LocalePackPt>
            <version>0.7.0</version>
            <locale>pt_PT</locale>
            <title>Portuguese (Portugal) Language Pack</title>
            <link_git>https://github.com/MaWoScha/German_LocalePack_pt_PT</link_git>
            <link_mage>http://www.magentocommerce.com/magento-connect/portuguese-language-pack-by-licentia-pt.html</link_mage>
        </German_LocalePackPt>
    </modules>

    <global>
        <models>
            <localepackpt>
                <class>German_LocalePackPt_Model</class>
            </localepackpt>
        </models>
        <helpers>
            <localepackpt>
                <class>German_LocalePackPt_Helper</class>
            </localepackpt>
        </helpers>
        <blocks>
            <localepackpt>
                <class>German_LocalePackPt_Block</class>
            </localepackpt>
        </blocks>
        <events>
            <adminhtml_controller_action_predispatch_start>
                <observers>
                    <localepackpt>
                        <class>localepackpt/observer</class>
                        <method>adminhtmlControllerActionPredispatchStart</method>
                    </localepackpt>
                </observers>
            </adminhtml_controller_action_predispatch_start>
        </events>
        <resources>
            <localepackpt_setup>
                <setup>
                    <module>German_LocalePackPt</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </localepackpt_setup>
        </resources>
    </global>
	
    <default>
        <localepackpt>
             <notification>
                <url>https://github.com/MaWoScha/German_LocalePack_pt_PT</url>
            </notification>
        </localepackpt>
        <magesetup>
            <default_country>PT</default_country>
        </magesetup>
    </default>

    <adminhtml>
        <layout>
            <updates>
                <localepackpt>
                    <files>
                    	<default>localepackpt.xml</default>
                    </files>
                </localepackpt>
            </updates>
        </layout>
        <translate>
            <modules>
                <German_LocalePackPt>
                    <files>
                        <default>German_LocalePt.csv</default>
                    </files>
                </German_LocalePackPt>
            </modules>
        </translate>
        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children> <!--
                                        <localepacks translate="title" module="localepackpt">
                                            <title>Language Packs</title>
                                    		<children> -->
                                        		<localepackpt translate="title" module="localepackpt">
                                            		<title>Portuguese (Portugal) Language Pack</title>
                                        		</localepackpt> <!--
                                    		</children>
                                        </localepacks> -->
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>

</config>